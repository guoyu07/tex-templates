% Frame title

\defbeamertemplate*{frametitle}{percona}[1][] {
	    \begin{beamercolorbox}[wd=\paperwidth,colsep=1.0pt]{upper separation line head}
	    \end{beamercolorbox}
		\ifx\insertframesubtitle\@empty
	    	\begin{beamercolorbox}[wd=\paperwidth,%
	    		plus1fil,center]{title in head/foot}
				\usebeamerfont{title in head/foot}\insertframetitle
	    	\end{beamercolorbox}
		\else
			\begin{beamercolorbox}[wd=\paperwidth,%
				plus1fil,center,ht=0.10\paperheight]{subtitle in head/foot}
				\usebeamerfont{subtitle in head/foot}\insertframetitle \\
				\usebeamerfont{subtitle in head/foot}\insertframesubtitle
			\end{beamercolorbox}
		\fi
	    \begin{beamercolorbox}[wd=\paperwidth,colsep=1.5pt]{upper separation line head}
	    \end{beamercolorbox}
	    
	    \tikz[remember picture,overlay] {%
	    	\draw[perconabordo,line width=0.064cm] ([yshift=-0.19\paperheight]current page.north west)
	    	-- ([yshift=-0.19\paperheight,xshift=\paperwidth]current page.north west);}
}

