\defbeamertemplate*{frametitle}{plam}[1][] {
        \begin{textblock*}{\paperwidth}(0.08\paperwidth,0.08\paperheight)
                \begin{beamercolorbox}{frametitle}
                        \usebeamerfont{frametitle}\insertframetitle%
                \end{beamercolorbox}%
        \end{textblock*}
        
        \begin{textblock*}{\paperwidth}(0pt,0pt)
        	\tikz[remember picture,overlay] {%
        		\draw[plamtitlepagegreen,line width=0.05cm] (0,-0.21\paperheight) -- (\paperwidth,-0.21\paperheight);
        	}
        \end{textblock*}
}

\defbeamertemplate*{footline}{plam}[1][] {
	
	\ifnum \insertpagenumber=1
	\else
	    \begin{textblock*}{\paperwidth}(0.97\paperwidth,0.92\paperheight)
	            \begin{beamercolorbox}{framenumber}
	                    \usebeamerfont{framenumber}\insertframenumber%
	            \end{beamercolorbox}%
	    \end{textblock*}
	
	    \vskip0.3in%
    \fi
}


